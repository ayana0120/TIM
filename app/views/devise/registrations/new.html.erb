<div class="row">
  <div class="col-md-6 offset-md-3 col-sm-12">
    <div class="registration_new">
      <h2>新規登録</h2>

      <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field name">
          <%= f.label :ユーザー名 %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"sign_up_form" %>
        </div>

        <div class="field email">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"sign_up_form" %>
        </div>

        <div class="field password1">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class:"sign_up_form" %>
        </div>

        <div class="field password2">
          <%= f.label :パスワード確認 %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"sign_up_form" %>
        </div>

        <div class="actions">
          <%= f.submit " 新規登録 ", class:"btn btn-info btn-block" %>
        </div>
      <% end %>

      <!-- SNS認証 -->
      <div class="session_sns_login">
        <%= render "users/omniauth_callbacks/sns_login_session" %>

        <%= link_to "ゲストとしてログイン", users_guest_sign_in_path, class:"guest_login_link", method: :post %>
      </div>

    </div>
  </div>
</div>
