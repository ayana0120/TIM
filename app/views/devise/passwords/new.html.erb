<div class="row">
  <div class="col-md-6 offset-md-3 col-sm-12">
    <div class="passwords_new">
	<h2>パスワードを忘れましたか？</h2>

	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
	  <%= render "devise/shared/error_messages", resource: resource %>

	  <div class="field email">
	    <%= f.label :メールアドレス %>
	    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"sign_up_form" %>
    　</div>

	  <div class="actions">
	    <%= f.submit "パスワードをリセット", class:"btn btn-info btn-block" %>
	  </div>
	<% end %>

	<!-- SNS認証 -->
	  <div class="session_sns_login">
	    <%= render "users/omniauth_callbacks/sns_login_session" %>
	  </div>
	</div>
  </div>
</div>

