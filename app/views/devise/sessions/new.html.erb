<div class="row">
  <div class="col-md-12">
    <div class="session_new">
      <h2>ログイン</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field email">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"log_in_form" %>
        </div>

        <div class="field password1">
          <%= f.label :パスワード %>
          <%= f.password_field :password, autocomplete: "current-password", class:"log_in_form" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :ログイン情報を保存 %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class:"btn btn-info btn-block" %>
        </div>
      <% end %>

      <div class="registration_path">
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "新規登録", new_registration_path(resource_name) %><br />
        <% end %>
      </div>

      <div class="remember_password_path">
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "パスワードを忘れた方はこちら", new_password_path(resource_name) %><br />
        <% end %>
      </div>
    </div>
  </div>
</div>