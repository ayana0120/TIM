<div class="row">
  <div class="col-md-12">
    <div class="session_new">
      <h2>ログイン</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field email">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"log_in_form" %>
        </div>

        <div class="field password1">
          <%= f.label :パスワード %>
          <%= f.password_field :password, autocomplete: "current-password", class:"log_in_form" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :ログイン情報を保存 %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class:"btn btn-info btn-block" %>
        </div>
      <% end %>

      <div class="remember_password_path">
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "パスワードを忘れた方はこちら", new_password_path(resource_name) %><br />
        <% end %>
      </div>

    <!-- SNS認証 -->
      <div class="session_google">
        <%= link_to user_google_oauth2_omniauth_authorize_path, method: :get, class:"google_session_new" do %>
          <i class="fab fa-google fa-2x"></i> Sign in with Google
        <% end %>
      </div>

      <div class="session_twitter">
        <%= link_to user_twitter_omniauth_authorize_path, method: :get, class:"twitter_session_new" do %>
          <i class="fab fa-twitter fa-2x"></i><b> Sign in with Twitter</b>
        <% end %>
      </div>

      <div class="session_yahoo">
        <%= link_to image_tag("yahoologin_lg.gif"), user_yahoojp_omniauth_authorize_path, method: :get %>
      </div>
    </div>
  </div>
</div>