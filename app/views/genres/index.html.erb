<div class="row">
  <div class="col-md-12 error_message">
    <%= render 'users/error', model: @genre %>
  </div>
  <div class="col-md-10 offset-1">
    <h2>ジャンル一覧</h2>
    <%= form_with model: @genre do |f| %>
    <table class="table genres_new">
      <thead class="contents">
      	<tr>
      	  <th>ジャンル名</th>
      	  <th>フォーム</th>
      	  <th></th>
          <th></th>
      	</tr>
      </thead>
      <tbody>
        <tr>
          <td>ジャンル追加</td>
          <td><%= f.text_field :name %></td>
          <td><%= f.submit "追加", class: "btn btn-primary" %></td>
        </tr>
      </tbody>
    </table>
    <% end %>
    <% @genres.each do |genre| %>
    <table class="table genres_index">
      <tr>
        <td>
          <%= link_to items_path(genre_id: genre) do %>
            <%= genre.name %>
          <% end %>
        </td>
	  	  <%= form_for(genre) do |f| %>
      	  <td><%= f.text_field :name %></td>
      	  <td><%= f.submit "変更", class: "btn btn-success" %></td>
      	  <td><%= link_to "削除", genre_path(genre), method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-danger" %></td>
        <% end %>
	    </tr>
  	<% end %>
    </table>
  </div>
</div>
