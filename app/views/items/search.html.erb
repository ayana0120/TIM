<div class="row">
  <div class="col-md-10 offset-1">
    <h2>" <%= params[:q][:name_cont] %> "に該当するアイテムは" <%= @items.count %> "件です</h2>
    <table class="table items_index">
    　<thead class="contents">
    	<tr>
    	  <th>ジャンル</th>
    	  <th>アイテム名</th>
    	  <th>個数</th>
    	  <th>期限</th>
    	  <th></th>
    	  <th></th>
    	</tr>
      </thead>

      <tbody>
      <% @items.each do |item| %>
      	<tr>
      	  <td>
            <%= link_to items_path(genre_id: @genre) do %>
              <%= item.genre.name %>
            <% end %>
          </td>
      	  <td>
      	  	<%= link_to item_path(item) do %>
      	  	  <%= item.name %>
      	  	<% end %>
      	  </td>
      	  <td><%= item.quantity %></td>
      	  <td><%= item.exp %></td>
      	  <td><%= link_to "編集", edit_item_path(item), class:"btn btn-success"  %></td>
      	  <td><%= link_to "削除", item_path(item), method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-danger" %></td>
      	</tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>