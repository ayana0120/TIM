<h1>Items#index</h1>
<p>Find me in app/views/items/index.html.erb</p>
<table class="table items_index">
  <% @items.each do |item| %>
  	<tr>
  	  <td><%= item.created_at.strftime("%Y-%m-%d") %></td>
  	  <td><%= item.genre.name %></td>
  	  <td><%= item.name %></td>
  	  <td><%= item.quantity %></td>
  	  <td><%= item.exp %></td>
  	  <td><%= link_to "削除", item_path(item), method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-danger" %></td>
  	</tr>
  <% end %>
</table>