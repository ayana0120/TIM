<h3>アイテム一覧</h3>
<table class="table items_index">
　<thead class="contents">
	<tr>
	  <th>ジャンル</th>
	  <th>アイテム名</th>
	  <th>個数</th>
	  <th>期限</th>
	  <th></th>
	  <th></th>
	</tr>
  </thead>

  <tbody>
  <% @items.each do |item| %>
  	<tr>
  	  <td><%= item.genre.name %></td>
  	  <td><%= item.name %></td>
  	  <td><%= item.quantity %></td>
  	  <td><%= item.exp.strftime("%Y/%m/%d") %></td>
  	  <td><%= link_to "編集", edit_item_path(item), class:"btn btn-success"  %></td>
  	  <td><%= link_to "削除", item_path(item), method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-danger" %></td>
  	</tr>
  <% end %>
</tbody>
</table>