<div class="row">
  <div class="col-md-5">
  <h2>アイテム情報</h2>
    <div class="item_image">
    	<%= attachment_image_tag @item, :image, size: "300x300", format: "jpg",
    	fallback: "no-data.jpg", size: "300x300" %>
    </div>
  </div>

  <div class="col-md-7">
    <div class="items name">アイテム名
      <span class="item_field">
    	  <%= @item.name %>
      </span>
    </div>
    <div class="items genre">ジャンル
      <span class="item_field">
        <%= @item.genre.name %>
      </span>
    </div>
    <div class="items quantity">個数
      <span class="item_field">
        <%= @item.quantity %>
      </span>
    </div>
    <div class="items exp">期限
      <span class="item_field">
        <%= @item.exp %>
      </span>
    </div>
    <div class="items memo">メモ
      <span class="memo_area">
        <%= @item.memo %>
      </span>
    </div>
    <div class="items edit">
      <%= link_to "編集", edit_item_path(@item), class:"btn btn-success"  %>
    </div>
  </div>
</div>